<?php

use Drupal\Core\Session\AccountInterface;
use Drupal\field\Entity\FieldConfig;
use Drupal\field\Entity\FieldStorageConfig;
use \Drupal\user\Entity\User;

/**
 * Implements hook_install().
 */
function relaxed_test_install() {
  // Set permissions.
  $permissions = ['perform push replication'];
  user_role_grant_permissions('replicator', $permissions);

  User::create([
    'name' => 'replicator',
    'mail' => 'foo@bar.baz',
    'pass' => 'replicator',
    'status' => 1,
  ])->save();

  FieldStorageConfig::create([
    'field_name' => 'files',
    'entity_type' => 'entity_test_mulrev',
    'type' => 'file',
    'cardinality' => 4,
    'translatable' => FALSE,
  ])->save();

  FieldConfig::create([
    'field_name' => 'files',
    'entity_type' => 'entity_test_mulrev',
    'bundle' => 'entity_test_mulrev',
    'label' => 'Files',
    'widget' => [
      'type' => 'file',
      'weight' => 0,
    ],
  ])->save();
}
